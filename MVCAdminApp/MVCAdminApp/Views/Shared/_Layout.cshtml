<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCAdminApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCAdminApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between">
                <div>
                    <a asp-controller="Students" asp-action="Index" class="navbar-brand">All Students</a>
                    <a asp-controller="PartneringApp" asp-action="Index" class="navbar-brand">Book store</a>
                    <a asp-controller="PartneringAppOrders" asp-action="Index" class="navbar-brand">Book orders</a>
                </div>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="font-size:xx-large;">
                    <img src="https://cdn-icons-png.flaticon.com/512/2972/2972272.png" width="70" height="70" class="d-inline-block align-top" alt="">
                    <span class="align-middle">Online Education Admin Platform</span>
                </a>
                <div></div>
            </div>
        </nav>
    </header>
    <div class="row">

        <div class="col-2">
            <div class="list-group">
                <ul class="list-group list-group-flush ms-1">
                    <li>
                        <div class="list-group-item list-group-item-info">Actions</div>
                        <ul class="list-group list-group-flush">
                            <a class="list-group-item ps-4" asp-area="" asp-controller="Courses" asp-action="ImportAllCourses">Import courses</a>
                            <a class="list-group-item ps-4" asp-area="" asp-controller="Students" asp-action="ImportAllStudents">Import students</a>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
        <main role="main" class="pb-3 col pe-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MVCAdminApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
