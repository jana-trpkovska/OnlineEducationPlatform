@model MVCAdminApp.Models.PartneringAppModels.Order


<div>
    <div>
        <h3>Order details for @Model.User.Email</h3>
    </div>
    @if(Model.bookInOrders.Count() == 0)
    {
        <h3>No books in order</h3>
    }

    @for(int i=0;i<Model.bookInOrders.Count(); i++)
    {
        var item = Model.bookInOrders.ElementAt(i).Book;
        if(i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 m-4">

            <div class="card" style="width: 18rem; height: 35rem">
                <img class="card-img-top" src="@item.BookImage" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <h6>Price: @item.Price</h6>
                </div>

            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }
</div>