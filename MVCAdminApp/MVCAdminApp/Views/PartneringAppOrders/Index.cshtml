@{
}


@model List<MVCAdminApp.Models.PartneringAppModels.Order>

<div>
    <h1 class="text-center mb-4">Book Orders</h1>
    <div class="row">
        <a asp-action="ExportAllOrders" class="btn btn-success form-control mb-3">Export All Orders</a>
    </div>

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">User</th>
                    <th scope="col">Number of books</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active orders</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.User.FirstName @item.User.LastName</td>
                            <td>@item.bookInOrders.Count</td>
                            <td><a asp-action="Details" asp-route-Id="@item.Id" class="btn btn-outline-dark">Details</a></td>
                            <td><a asp-action="CreateInvoice" asp-route-Id="@item.Id" class="btn btn-outline-dark">Create Invoice</a></td>
                        </tr>

                    }
                }
            </tbody>

        </table>
    </div>

</div>