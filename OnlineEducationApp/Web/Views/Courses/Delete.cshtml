@model Domain.DomainModels.Course

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this course?</h3>
<div>
    <div class="d-flex flex-column justify-content-center align-items-center mb-4" style="background-position-y:-200px; background-image:url(@Model.CourseImage); height:600px; background-size:cover; background-repeat:no-repeat;">
        <div style="font-size:100px;">@Model.Title</div>
        <p style="font-size:larger;">@Model.Description</p>
        <div style="margin-bottom:5px;">
            <span style="padding:10px;">Duration: @Model.Duration</span>
            <span style="padding:10px;">Level: @Model.Level</span>
            <span style="padding:10px;">Number of students: @Model.Enrollments.Count()</span>
        </div>
        <div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-dark" asp-action="Details" asp-route-id="@Model.Id">Back to Course</a>
            </form>
        </div>
    </div>

    
</div>
