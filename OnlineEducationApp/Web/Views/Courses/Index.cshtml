@model List<Domain.DomainModels.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center mb-4">Courses</h1>

<p>
    <a class="btn btn-outline-success btn-lg form-control" asp-action="Create">Create New Course</a>
</p>

@for (int i = 0; i < Model.Count(); i++)
{
    var item = Model[i];
    if (i % 4 == 0)
    {
        @:<div class="row mb-5">
    }
    <div class="col-3">
        <div class="card" style="width: 18rem; height:550px;">
            <img src="@item.CourseImage" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">@item.Description</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Duration: @item.Duration min</li>
                <li class="list-group-item">Level: @item.Level</li>
            </ul>
            <div class="card-body">
                <a asp-action="Details" asp-route-id="@item.Id" class="card-link btn btn-outline-dark form-control">View Course</a>
            </div>
        </div>        
    </div>
    if(i%4==3){
        @:</div>
    }
}
